<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_track_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/item_track_play_content_description"
        android:paddingHorizontal="@dimen/activity_horizontal_little_margin"
        android:paddingVertical="@dimen/activity_vertical_little_margin"
        app:srcCompat="@drawable/play_to_pause" />

    <View
        android:layout_width="@dimen/detail_activity_item_track_vertical_separator_width"
        android:layout_height="match_parent"
        android:background="@color/primaryDarkColor" />

    <TextView
        android:id="@+id/text_view_track_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/activity_vertical_little_margin"
        android:layout_weight="1"
        android:textColor="@color/whiteColor" />

    <View
        android:layout_width="@dimen/detail_activity_item_track_vertical_separator_width"
        android:layout_height="match_parent"
        android:background="@color/primaryDarkColor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/item_track_share_action_content_description"
            android:padding="@dimen/activity_vertical_little_margin"
            app:srcCompat="@drawable/share_active" />

        <ImageView
            android:id="@+id/image_view_see_on_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/item_track_see_on_web_content_description"
            android:paddingVertical="@dimen/activity_vertical_little_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            app:srcCompat="@drawable/on_web_active"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

</LinearLayout>